// Au clic sur un mail, on le passe en "lu" et on modifie son apparence
<% @email.update(read: true) %>
document.querySelector(".mail-<%= @email.id %> .read-tag").classList.remove("not");
document.querySelector(".mail-<%= @email.id %> .read-tag").innerText = "Lu";
document.querySelector(".mail-<%= @email.id %>").classList.remove("bold");

// On affiche son détail sur la partie droite de l'écran
document.querySelector(".display-section__right").classList.remove("hidden");
document.querySelector(".display-section__right__mail").innerHTML = "<%= j render 'email-detailled', email: @email %>";